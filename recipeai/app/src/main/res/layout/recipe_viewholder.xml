<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="164dp"
        android:layout_height="168dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="192dp"
        android:layout_height="23dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/recipe_description"
        android:layout_width="192dp"
        android:layout_height="76dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/cook_btn"
        app:layout_constraintStart_toStartOf="@+id/recipe_name"
        app:layout_constraintTop_toBottomOf="@+id/recipe_name" />

    <Button
        android:id="@+id/cook_btn"
        android:layout_width="83dp"
        android:layout_height="48dp"
        android:text="@string/cook_btn"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/recipe_description" />

    <Button
        android:id="@+id/remove_recipe"
        android:layout_width="83dp"
        android:layout_height="48dp"
        android:text="@string/remove_recipe"
        app:layout_constraintEnd_toEndOf="@+id/recipe_description"
        app:layout_constraintStart_toEndOf="@+id/cook_btn"
        app:layout_constraintTop_toTopOf="@+id/cook_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>